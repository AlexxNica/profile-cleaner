#!/bin/bash

do_clean() {
	bsize=$(ls -l "$1" | awk {'print $5'})
	sqlite3 "$1" vacuum &>/dev/null
	sqlite3 "$1" reindex &>/dev/null
	asize=$(ls -l "$1" | awk {'print $5'})
	dsize=$(echo "scale=2; ($bsize-$asize)/1048576" | bc)
	echo "$1" reduced by $dsize Mbytes
}

do_chrome() {
	prepath=$HOME/.config/chromium
	if [[ -h "$prepath" ]]; then
		path=$(readlink $prepath)
	else
		path="$prepath"
	fi

	if [[ ! -d "$path" ]]; then
		echo "Error: no profile directory for chrome/chromium found."
		exit 0
	fi

	for i in History Archived Safe; do
		find ${path} -type f -name "$i*" -print0 | xargs -0 -n 1 -I {} bash -c "do_clean {} 2>/dev/null"
	done
}

do_firefox() {
	path=$HOME/.mozilla/firefox
	if [[ ! -f $path/profiles.ini ]]; then
		echo "Error: cannot locate $path/profiles.ini to determine names of profiles."
		exit 0
	fi

	# read each profile into the work array
	work=( $(grep Path $path/profiles.ini | sed 's/Path=//') )

	for i in "${work[@]}"; do
		find ${path} -name '*.sqlite' -print0 | xargs -0 -n 1 -I {} bash -c "do_clean {} 2>/dev/null"
	done
}

export -f do_clean

case "$1" in
	c)
		do_chrome
		exit 0
		;;
	f)
		do_firefox
		exit 0
		;;
	*)
		echo "Usage $0 {c|f}"
		echo "c) chrome/chromium"
		echo "f) firefox"
		exit 0
		;;
esac
